[Interface]
Address = 10.192.122.1/24
SaveConfig = true
ListenPort = {{ config.port }}
PostUp = iptables -A FORWARD -i wgnet{{ config.netnum }} -j ACCEPT; iptables -A FORWARD -o wgnet{{ config.netnum }} -j ACCEPT; iptables -t nat -A POSTROUTING -o {{ config.nic }} -j MASQUERADE
PostDown = iptables -D FORWARD -i wgnet{{ config.netnum }} -j ACCEPT; iptables -D FORWARD -o wgnet{{ config.netnum }} -j ACCEPT; iptables -t nat -D POSTROUTING -o {{ config.nic }} -j MASQUERADE
PrivateKey = {{ config.privatekeyserver }}

[Peer]
PublicKey = {{ config.publickeyclient }}
AllowedIPs = 10.192.122.2/32
PresharedKey = {{ config.presharedkeyclient }}
